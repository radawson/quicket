# Database - Matches your docker-compose.yml PostgreSQL configuration
DATABASE_URL="postgresql://informejo:Password@localhost:5432/informejo?schema=public"

# NextAuth - Generate a secure secret for production!
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="openssl rand -base64 32"

# Keycloak OIDC - Update with your Keycloak details
KEYCLOAK_ID="client-id"
KEYCLOAK_SECRET="client-secret-from-keycloak"
KEYCLOAK_ISSUER="https://keycloak.host/realms/my-realm"

# Email (SMTP) - Update with your SMTP server details
SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-password"
SMTP_FROM="IT Support <support@example.com>"

# App Configuration
PORT=3000
NEXT_PUBLIC_APP_URL="http://localhost:3000"
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"